BasedOnStyle: LLVM
IndentWidth: 2
TabWidth: 2
UseTab: Never
DerivePointerAlignment: false
PointerAlignment: Left
NamespaceIndentation: All
AllowShortFunctionsOnASingleLine: None
SortIncludes: true
IncludeBlocks: Regroup
IncludeCategories:
  - Regex: '^<.*\.h>'
    Priority: 1
    SortPriority: 0
    CaseSensitive: false
  - Regex: '^"[^/]+\.h"'
    Priority: 2
    SortPriority: 0
    CaseSensitive: false
  - Regex: '^".*"'
    Priority: 3
    SortPriority: 0
    CaseSensitive: false
